<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyWhite"
    tools:context=".activity.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brightBlue"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="@id/layout_header"
                app:layout_constraintStart_toStartOf="@id/layout_header"
                app:layout_constraintTop_toTopOf="@id/layout_header" />

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_roman"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/layout_header"
                app:layout_constraintEnd_toEndOf="@id/layout_header"
                app:layout_constraintStart_toStartOf="@id/layout_header"
                app:layout_constraintTop_toTopOf="@id/layout_header" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_header">

            <androidx.cardview.widget.CardView

                android:id="@+id/card_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:elevation="10dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="@id/layout_top"
                app:layout_constraintTop_toTopOf="@id/layout_top">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="130dp"
                    android:layout_height="126dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/img_profile_holder"></ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Current Balance"
                android:textColor="@color/greyishBrown"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/card_profile"
                app:layout_constraintTop_toBottomOf="@id/value_balance" />

            <TextView
                android:id="@+id/value_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="0.97890452"
                android:textColor="@color/blackTwo"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/card_profile"
                app:layout_constraintTop_toBottomOf="@id/layout_box_profile" />

            <ImageView
                android:id="@+id/img_btc"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_bitcoin"
                android:tint="@color/brightBlue"
                app:layout_constraintStart_toEndOf="@id/value_balance"
                app:layout_constraintTop_toTopOf="@id/value_balance" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_box_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/box_profile"
                app:layout_constraintTop_toTopOf="@id/layout_top"
                app:layout_constraintEnd_toEndOf="@id/layout_top"
                app:layout_constraintStart_toEndOf="@id/card_profile">

                <View
                    android:id="@+id/line_horizontal"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/label_contract_id"
                    app:layout_constraintEnd_toEndOf="@id/layout_box_profile"
                    app:layout_constraintStart_toStartOf="@id/layout_box_profile"
                    app:layout_constraintTop_toTopOf="@id/layout_box_profile" />

                <TextView
                    android:id="@+id/value_reward_point_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="10285"
                    android:textColor="@color/chocolate2"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/layout_box_profile"
                    app:layout_constraintStart_toEndOf="@id/line_horizontal"
                    app:layout_constraintTop_toTopOf="@id/layout_box_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_roman"
                    android:paddingBottom="12dp"
                    android:text="Reward Point"
                    android:textColor="@color/greyishBrown"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/layout_box_profile"
                    app:layout_constraintStart_toEndOf="@id/line_horizontal"
                    app:layout_constraintTop_toBottomOf="@id/value_reward_point_count" />

                <TextView
                    android:id="@+id/value_contract_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="#710285"
                    android:textColor="@color/chocolate"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/line_horizontal"
                    app:layout_constraintStart_toStartOf="@id/layout_box_profile"
                    app:layout_constraintTop_toTopOf="@id/layout_box_profile" />

                <TextView
                    android:id="@+id/label_contract_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_roman"
                    android:paddingBottom="12dp"
                    android:text="Contract ID"
                    android:textColor="@color/greyishBrown"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/line_horizontal"
                    app:layout_constraintStart_toStartOf="@id/layout_box_profile"
                    app:layout_constraintTop_toBottomOf="@id/value_reward_point_count" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_claim"
                android:tint="@color/transacGreen"
                app:layout_constraintEnd_toEndOf="@id/layout_box_profile"
                app:layout_constraintStart_toEndOf="@id/value_balance"
                app:layout_constraintTop_toBottomOf="@id/layout_box_profile" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:padding="20dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_top">

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_email"
                android:tint="@color/softBlue"
                app:layout_constraintStart_toStartOf="@id/layout_email"
                app:layout_constraintTop_toTopOf="@id/layout_email" />

            <TextView
                android:id="@+id/label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Email"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/img_email"
                app:layout_constraintTop_toTopOf="@id/layout_email" />

            <TextView
                android:id="@+id/value_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_roman"
                android:text="harrysusanto13@gmail.com"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/layout_email"
                app:layout_constraintTop_toTopOf="@id/layout_email" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_claim_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_email">

            <ImageView
                android:id="@+id/img_claim"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_claim"
                android:tint="@color/softBlue"
                app:layout_constraintStart_toStartOf="@id/layout_claim_type"
                app:layout_constraintTop_toTopOf="@id/layout_claim_type" />

            <TextView
                android:id="@+id/label_claim_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Claim Type"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/img_claim"
                app:layout_constraintTop_toTopOf="@id/layout_claim_type" />

            <TextView
                android:id="@+id/value_claim_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_roman"
                android:text="Automatic"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/layout_claim_type"
                app:layout_constraintTop_toTopOf="@id/layout_claim_type" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_reward_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_claim_type">

            <ImageView
                android:id="@+id/img_reward"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_reward"
                android:tint="@color/softBlue"
                app:layout_constraintStart_toStartOf="@id/layout_reward_point"
                app:layout_constraintTop_toTopOf="@id/layout_reward_point" />

            <TextView
                android:id="@+id/label_reward_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Reward Point"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/img_reward"
                app:layout_constraintTop_toTopOf="@id/layout_reward_point" />

            <TextView
                android:id="@+id/value_reward_point_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_roman"
                android:text="OFF"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/layout_reward_point"
                app:layout_constraintTop_toTopOf="@id/layout_reward_point" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_extra_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_reward_point">

            <ImageView
                android:id="@+id/img_bonus"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_paid"
                android:tint="@color/softBlue"
                app:layout_constraintStart_toStartOf="@id/layout_extra_bonus"
                app:layout_constraintTop_toTopOf="@id/layout_extra_bonus" />

            <TextView
                android:id="@+id/label_extra_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Extra Bonus"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/img_bonus"
                app:layout_constraintTop_toTopOf="@id/layout_extra_bonus" />

            <TextView
                android:id="@+id/value_extra_bonus_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_roman"
                android:text="OFF"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/layout_extra_bonus"
                app:layout_constraintTop_toTopOf="@id/layout_extra_bonus" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/label_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/avenir_roman"
            android:text="Action"
            android:textColor="@color/blackGrey"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_extra_bonus" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_action">

            <ImageView
                android:id="@+id/img_change_password"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_lock"
                android:tint="@color/softBlue"
                app:layout_constraintStart_toStartOf="@id/layout_change_password"
                app:layout_constraintTop_toTopOf="@id/layout_change_password" />

            <TextView
                android:id="@+id/label_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Change Password"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/img_change_password"
                app:layout_constraintTop_toTopOf="@id/layout_change_password" />

            <ImageView
                android:id="@+id/arrow_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_roman"
                android:src="@drawable/ic_right"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                android:tint="@color/softBlue"
                app:layout_constraintEnd_toEndOf="@id/layout_change_password"
                app:layout_constraintTop_toTopOf="@id/layout_change_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_change_password">

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_logout"
                android:tint="@color/transacRed"
                app:layout_constraintStart_toStartOf="@id/layout_logout"
                app:layout_constraintTop_toTopOf="@id/layout_logout" />

            <TextView
                android:id="@+id/label_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Logout"
                android:textColor="@color/blackGrey"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/img_logout"
                app:layout_constraintTop_toTopOf="@id/layout_logout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>