<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".activity.WithdrawActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressBarWD"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/GreenAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageBackWD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/labeHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:text="Withdraw Overview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/avenir_roman"
                app:layout_constraintTop_toTopOf="parent"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintBoxBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labeHeader"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iconBitcoin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_bitcoin"
                    android:foregroundGravity="center"
                    app:layout_constraintStart_toEndOf="@id/textViewBalanceWD"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewBalanceWD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/avenir_roman"
                    android:text="balance"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/labelCurrentBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/avenir_roman"
                    android:text="@string/current_balance"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewBalanceWD" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/labelAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_to"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/overview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editTextBitcoinAddress"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textSize="13sp"
            android:background="@drawable/edit_text_grey"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="@string/label_btc_address"
            android:textAllCaps="false"
            android:textColor="@color/greyishBrown"
            android:textColorHint="@color/greyishBrown"
            app:layout_constraintTop_toBottomOf="@+id/labelAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnScanQR" />

        <ImageButton
            android:id="@+id/btnScanQR"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_crop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelAddress" />

        <TextView
            android:id="@+id/labelAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_amount"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/editTextBitcoinAddress"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="numberDecimal"
            android:textSize="13sp"
            android:background="@drawable/edit_text_grey"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:paddingStart="10dp"
            android:hint="@string/label_enter_amount"
            android:textAllCaps="false"
            android:textColor="@color/greyishBrown"
            android:textColorHint="@color/greyishBrown"
            app:layout_constraintTop_toBottomOf="@+id/labelAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn100"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="100%"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextAmount"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn75"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="75%"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextAmount"
            app:layout_constraintEnd_toStartOf="@id/btn100" />

        <Button
            android:id="@+id/btn50"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="50%"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextAmount"
            app:layout_constraintEnd_toStartOf="@id/btn75" />

        <Button
            android:id="@+id/btn25"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="25%"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextAmount"
            app:layout_constraintEnd_toStartOf="@id/btn50" />

        <TextView
            android:id="@+id/labelFeesWD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_fee"
            app:layout_constraintTop_toBottomOf="@id/editTextAmount"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/avenir_roman"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/labelAmountDeducted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_amount_deducted"
            app:layout_constraintTop_toBottomOf="@id/labelFeesWD"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="13sp"
            android:textColor="@color/transacRed" />
        <Button
            android:id="@+id/buttonWithdrawWD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_withdraw"
            android:background="@drawable/button_blue"
            app:layout_constraintTop_toBottomOf="@id/labelAmountDeducted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>