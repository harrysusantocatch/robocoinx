<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".activity.WithdrawActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/actionModeCloseDrawable"
            android:tint="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/labeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:text="Withdraw Overview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/avenir_roman"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/overview"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:elevation="5dp"
        android:background="@drawable/button_card"
        app:layout_constraintTop_toBottomOf="@id/overview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/fingerprint"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#ff4141"
            android:src="@drawable/ic_fingerprint"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintStart_toStartOf="@id/card"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_bold"
            android:textSize="35sp"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintStart_toEndOf="@id/fingerprint"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uto"
            android:fontFamily="@font/gotham_bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/type"
            app:layout_constraintTop_toTopOf="@id/card"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/balance"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0.09277860"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/balance_card"
            android:textSize="12sp"
            android:fontFamily="@font/avenir_roman"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1F1tAaz5x1HUXrCNLbtMDqcw6o5GNn4xqX"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/type"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/labelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Every Sunday"
            android:fontFamily="@font/avenir_roman"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintBottom_toBottomOf="@id/card"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00001500"
            android:fontFamily="@font/avenir_roman"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintBottom_toBottomOf="@id/card"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/minWithdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00031500"
            android:fontFamily="@font/avenir_roman"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/fee"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintBottom_toBottomOf="@id/card"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#0D000000"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintBottom_toBottomOf="@id/card"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/transacGreen"
            android:text="withdraw now"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="Change"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>