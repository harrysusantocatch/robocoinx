<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#269acf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:tint="@color/white"
        android:background="@drawable/small_circle_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:text="Menu Options"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/avenir_roman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutWithdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <ImageButton
            android:id="@+id/buttonWithdraw"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_radius"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_withdraw" />

        <TextView
            android:id="@+id/textWithdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/avenir_roman"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Withdraw"
            app:layout_constraintStart_toEndOf="@id/buttonWithdraw"
            app:layout_constraintTop_toTopOf="@id/layoutWithdraw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual"
            android:textSize="12sp"
            android:textColor="#66000000"
            android:fontFamily="@font/avenir_roman"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="@id/layoutWithdraw"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toTopOf="@id/layoutWithdraw"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutWithdraw">

        <ImageButton
            android:id="@+id/buttonDeposit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_radius"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_deposit" />

        <TextView
            android:id="@+id/textDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/avenir_roman"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Deposit"
            app:layout_constraintStart_toEndOf="@id/buttonDeposit"
            app:layout_constraintTop_toTopOf="@id/layoutDeposit" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutDeposit">

        <ImageButton
            android:id="@+id/buttonNotification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_radius"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_notification" />

        <TextView
            android:id="@+id/textNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/avenir_roman"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Notification"
            app:layout_constraintStart_toEndOf="@id/buttonNotification"
            app:layout_constraintTop_toTopOf="@id/layoutNotification" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_radius_33"
        android:fontFamily="@font/gotham_bold"
        android:textSize="12sp"
        android:text="Logout"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutNotification" />
</androidx.constraintlayout.widget.ConstraintLayout>