<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HistoryActivity">

        <TableLayout
            android:id="@+id/tableLayout"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/rowHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:id="@+id/headerDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.42"
                    android:gravity="start"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:text="@string/header_date" />

                <TextView
                    android:id="@+id/headerClaim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.29"
                    android:gravity="start"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="@string/header_amount" />

                <TextView
                    android:id="@+id/headerBalance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.29"
                    android:gravity="start"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="@string/header_balance" />
            </TableRow>
        </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/tableLayoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>